generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Motif {
  id          Int         @id @default(autoincrement()) @map("motif_id")
  motifName   String      @map("motif_name")
  description String?
  analysis String?
  appearances String?
  imagePath   String      @map("image_path")
  backgroundImagePath String @map("background_image_path")
  color String
  characters  Character[]

  @@map("motifs")
}

model Character {
  id          Int     @id @default(autoincrement()) @map("character_id")
  name        String
  media       String
  franchise   String
  description String?
  imagePath   String  @map("image_path")
  motifId     Int     @map("motif_id")
  motif       Motif   @relation(fields: [motifId], references: [id])

  @@map("characters")
}

